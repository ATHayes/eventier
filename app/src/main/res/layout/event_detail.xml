<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Event Title-->
    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="100"
            android:padding="16dp"
            android:scrollHorizontally="false"
            android:text=""
            tools:context="com.eventier.EventDetailFragment" />

    </LinearLayout>

    <!--Event pitch-->
    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/pitchValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="100"
            android:padding="16dp"
            android:scrollHorizontally="false"
            android:text=""

            tools:context="com.eventier.EventDetailFragment" />
    </LinearLayout>

    <!--Host-->
    <!--Todo - think this one over-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/hostLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:visibility="gone"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment" />

        <TextView
            android:id="@+id/hostValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:width="0dip"
            android:layout_weight="1"
            android:padding="8dp"
            android:visibility="gone"
            android:text=""
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment" />

    </LinearLayout>

    <!--Time-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/timeLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Time: "
            android:visibility="invisible"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment"
            android:drawableLeft="@drawable/ic_access_time_black_24dp" />


        <TextView
            android:id="@+id/timeValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:width="0dip"
            android:layout_weight="1"
            android:padding="8dp"
            android:text=""
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment" />

    </LinearLayout>

    <!--Location-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/locationLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Location: "
            android:visibility="invisible"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment"
            android:drawableLeft="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/locationValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/item_width"
            android:layout_weight="1"
            android:padding="8dp"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment" />
    </LinearLayout>

    <!--Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/dateLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Date: "
            android:visibility="invisible"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment"
            android:drawableLeft="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/dateValueLabel"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/item_width"
            android:layout_weight="1"
            android:padding="8dp"
            android:textIsSelectable="true"
            tools:context="com.eventier.EventDetailFragment" />

    </LinearLayout>

    <!--style="?android:attr/textAppearanceMedium"-->



</LinearLayout>